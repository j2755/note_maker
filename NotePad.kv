ScreenManagement:
	id:manager

	Home:
		id:home
	Note:
		id:notes



<Note_card>:
	note_id:self.note_id
	note_title:self.note_title
	note_content:self.note_content

	


<Home>:
	name:"home"
	on_enter: note_view.update_scroll()
	GridLayout:
		cols:1
	
		
			
		Button:
			text: 'New Note'
			on_release:app.root.current='notes'
			size_hint: (.2, .1)
		

		Note_view:
			id: note_view

<Note>:
	name:"notes"
	GridLayout:

		cols:1
		GridLayout:
			size_hint: (.2, .2)
			orientation: 'horizontal'
			rows: 1
			Label:
				text: 'tasks'
				size_hint: (.3, .3)
			Button:
				text: 'Home'
				on_release:app.root.current='home'
		TextInput:
			id: note_title
			hint_text:'Title'
			size_hint: (.2, .2)
		
		TextInput:
			id: note_content
			hint_text:'fssdsdsd'
			size_hint: (1, 1)
		Button:

			text: 'Submit'
			pos_hint: {'right': 1}
			size_hint: (.2, .2)
			on_release: app.submit()

		