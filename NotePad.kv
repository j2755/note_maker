ScreenManagement:
	id:manager

	Topics:
		id:topics
	Note:
		id:note
	Subtopics:
		id:subtopics


<Topics>:
	name:"home"
	grid:grid
	BoxLayout:
		orientation: 'vertical'
		pos_hint: {"x": 0,"y": 0 }
		padding: 20
		Button:
			text: 'Button'
			pos_hint: {'right': 1}
			size_hint: (.2, .2)
		Button:
			text: 'Say root'
			on_release:print(root)

		
		GridLayout:
			id:grid
			cols:2
			padding: 10
			spacing: 10


			Button:
				text: 'Grid'
				on_release:app.root.current='Notes'
<Note>:
	name:'Notes'
	GridLayout:
		cols:1
		Label:
			text: 'Other Screen'
		Button:
			text: 'Change to home'
			on_release:app.root.current= 'home'
		Button:
			text: 'Go to Subtopics'
			on_release:app.root.current='Subtopics'
		Button:
			text: 'Say root'
			on_release:print(root)
<Subtopics>:
	name:'Subtopics'
	GridLayout:
		cols:1
		Label:
			text: 'Subtopics Screen'
		Button:
			text:'go home'
			on_release:app.root.current='home'
		Button:
			text: 'Say root'
			on_release:print(root)